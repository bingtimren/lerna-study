{
  "name": "@bingsjs/word",
  "version": "0.2.0",
  "description": "A Typescript project template",
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "types": "build/main/index.d.ts",
  "files": [
    "build/main"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "dependency-cruiser": "^9.23.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gh-pages": "^3.1.0",
    "jest": "^26.6.3",
    "markdown-folder-to-html": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "open-cli": "^6.0.1",
    "prettier": "2.2.1",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.1",
    "ts-purify": "^2.0.1",
    "typedoc": "^0.20.25",
    "typescript": "^4.1.5"
  },
  "scripts": {
    "info": "npm-scripts-info",
    "?clean": "clean up project",
    "clean": "rm -fr build",
    "test": "run-s test:*",
    "test:unit": "jest -c config/jest.config.js --collectCoverage",
    "test:lint": "eslint src -c config/.eslintrc.js --ext .js,.jsx,.ts,.tsx",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src -c config/.eslintrc.js --ext .js,.jsx,.ts,.tsx --fix",
    "?cov": "run unit tests, collect code coverage and generate reports",
    "cov": "run-s -c build cov:unit cov:report",
    "cov:unit": "jest -c config/jest.config.js --collectCoverage",
    "cov:report": "open-cli build/docs/coverage/lcov-report/index.html",
    "?cz": "Git commit using Commitizen to enforce standard commit messages",
    "cz": "cz",
    "?build": "build without testing",
    "build": "mkdir -p build/main; run-s build:*",
    "build:purity": "ts-purify -s src -d build/main",
    "build:compile": "tsc --build config/tsconfig-build.json",
    "build:compile-module": "tsc --build config/tsconfig-build-module.json",
    "?watch:test": "Watch file changes and run related tests",
    "watch:test": "jest -c config/jest.config.js --watch",
    "doc": "run-s doc:html doc:gh-fix cov doc:open",
    "doc:html": "rm -fr build/docs; markdown-folder-to-html; mv _docs build/docs; typedoc --options config/typedoc.json src/ && depcruise --config config/.dependency-cruiser.js src --output-type dot src | dot -T svg > build/docs/api/dependencygraph.svg",
    "doc:gh-fix": "touch build/docs/.nojekyll",
    "doc:open": "open-cli build/docs/index.html",
    "doc:publish": "gh-pages -t -m \"[ci skip] Updates\" -d build/docs",
    "?todo": "search for any todo items (marked with 'TODO') in project files",
    "todo": "grep -r --color=always --exclude-dir=node_modules --exclude-dir=.git --exclude-dir=build 'TODO' .",
    "?cbt": "clean - build - test",
    "cbt": "run-s clean build test",
    "?release": "do a release dry-run when not invoked with --execute, otherwise do a release",
    "release": "config/scripts/release.sh"
  },
  "author": "Bing Ren",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "http://localhost:4873"
  }
}
